# Environment Variables for Direktori dan Edukasi Komposting Bali
# Copy this file to .env.local for local development
# Set these values in Netlify dashboard for production

# Application Configuration
VITE_APP_TITLE="Direktori dan Edukasi Komposting Bali"
VITE_APP_DESCRIPTION="Platform direktori dan edukasi yang menghubungkan warga Bali dengan layanan komposting lokal"
VITE_APP_URL="https://your-domain.netlify.app"

# Google Analytics (Optional)
VITE_GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"

# reCAPTCHA Configuration (Optional, for form spam protection)
VITE_RECAPTCHA_SITE_KEY="your-recaptcha-site-key"
RECAPTCHA_SECRET_KEY="your-recaptcha-secret-key"

# Development Settings
NODE_ENV="development"
VITE_API_BASE_URL="/.netlify/functions"

# Feature Flags (Optional)
VITE_ENABLE_ANALYTICS="true"
VITE_ENABLE_RECAPTCHA="false"
VITE_ENABLE_MAP_FEATURES="true"

# Netlify Function Configuration
# These are set automatically by Netlify, but useful for local development
URL="https://your-domain.netlify.app"
DEPLOY_URL="https://deploy-id--your-site.netlify.app"
CONTEXT="production"
